<ContentDialog x:Class="WoodenMoose.Controls.Dialogs.AccountDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               PrimaryButtonText="Add"
               SecondaryButtonText="Cancel">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                Padding="10">

        <TextBox Header="Name" />
        <TextBox Header="Tenant Id" Margin="0,10,0,0" />
        <TextBox Header="Client Id" Margin="0,10,0,0" />
        <TextBox Header="Secret Key" Margin="0,10,0,0" />
        <TextBox Header="Resource" Margin="0,10,0,0" />
        
    </StackPanel>
</ContentDialog>
